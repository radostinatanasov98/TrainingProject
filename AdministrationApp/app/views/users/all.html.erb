<h1 style="text-align: center; margin-top: 2%;">All Users</h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Email</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Address</th>
      <th scope="col">Date of Birth</th>
      <th scope="col">Role ID</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @Users.each do |u| %>
      <tr>
        <td><%= u.id %></td></th>
        <td><%= u.email %></td>
        <td><%= u.first_name %></td>
        <td><%= u.last_name %></td>
        <td><%= u.address %></td>
        <td><%= u.date_of_birth %></td>
        <td><%= u.role_id %></td>
        <td style="display: flex">
            <%= link_to 'Show', users_show_path(:email => "#{u.email}"), class: 'btn btn-primary me-1'%>
            <%= link_to 'Edit', users_update_path(:id => "#{u.id}"), class: 'btn btn-primary me-1'%>
            <%= button_to 'Destroy', users_delete_path(:id => "#{u.id}"), method: :delete, style: 'display: inline-block;', class: 'btn btn-danger'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>